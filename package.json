{
  "name": "dealflow-ai",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered real estate automation platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:studio": "cd packages/database && npm run studio",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:push": "cd packages/database && npm run push"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
